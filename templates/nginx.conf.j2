{% if use_redirect %}

server {
    listen 80;
    {% if use_ipv6 %}listen [::]:80;{% endif %}

    server_name {% if use_www %}www.{{ nginx_server_name }}{% endif %} {{ nginx_server_name }};
    return 301 https://{% if use_www %}www.{% endif %}{{ nginx_server_name }}$request_uri;
}
{% endif %}

server {
    {% if not use_https %}listen 80;{% endif %}

    {% if use_https %}
    listen 443 ssl spdy;
    {% if use_ipv6 %}listen [::]:443 ssl spdy;{% endif %}
    {% endif %}

    server_name {{ nginx_server_name }} {% if use_www %}www.{{ nginx_server_name }}{% endif %};
    client_max_body_size {{ nginx_client_max_body_size }};

    error_log {{ nginx_log_error }};
    access_log {{ nginx_log_access }};

    {% if use_gzip %}
    gzip on;
    gzip_min_length 1000;
    gzip_disable "msie6";
    gzip_comp_level 5;
    gzip_http_version 1.0;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript;
    {% endif %}

    {% if use_https %}

    ssl_certificate {{ nginx_ssl_certificate }};
    ssl_certificate_key {{ nginx_ssl_certificate_key }};

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_dhparam /etc/ssl/certs/dhparam.pem;
    ssl_ciphers 'ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-DSS-AES128-GCM-SHA256:kEDH+AESGCM:ECDHE-RSA-AES128-SHA256:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA:ECDHE-ECDSA-AES128-SHA:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA:ECDHE-ECDSA-AES256-SHA:DHE-RSA-AES128-SHA256:DHE-RSA-AES128-SHA:DHE-DSS-AES128-SHA256:DHE-RSA-AES256-SHA256:DHE-DSS-AES256-SHA:DHE-RSA-AES256-SHA:AES128-GCM-SHA256:AES256-GCM-SHA384:AES128-SHA256:AES256-SHA256:AES128-SHA:AES256-SHA:AES:CAMELLIA:DES-CBC3-SHA:!aNULL:!eNULL:!EXPORT:!DES:!RC4:!MD5:!PSK:!aECDH:!EDH-DSS-DES-CBC3-SHA:!EDH-RSA-DES-CBC3-SHA:!KRB5-DES-CBC3-SHA';
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_stapling on;
    ssl_stapling_verify on;
    add_header Strict-Transport-Security max-age=15768000;

    {% endif %}

    {% if nginx_auth_basic %}

    auth_basic "Restricted";
    auth_basic_user_file {{ nginx_htpasswd_file }};
    {% endif %}

    location /.well-known/ {
        alias /home/cloudofexperts/configs/letsencrypt/.well-known/;
    }

    if ($host != '{% if use_www %}www.{% endif %}{{ nginx_server_name }}') {
        rewrite ^ https://{% if use_www %}www.{% endif %}{{ nginx_server_name }}$request_uri last;
    }

    location ~ ^(\/chat\/) {
        proxy_pass http://127.0.0.1:{{ app_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_connect_timeout 360s;
        proxy_send_timeout 360s;
        proxy_read_timeout 360s;
    }

    location /celery/ {
        auth_basic "Restricted";
        auth_basic_user_file {{ nginx_htpasswd_file }};

        rewrite ^/celery/(.*)$ /$1 break;
        proxy_pass http://{{ flower_ip }}:{{ flower_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header REMOTE_ADDR $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    {% if nginx_auth_basic %}

    location ~ ^(\/api\/v1\/callback\/|\/api\/v1\/payment\/|\/robots\.txt) {
        include {{ nginx_proxy_pass_config_file }};

        auth_basic off;
    }{% endif %}

    location  ~ ^(\/admin\/|\/api\/|\/robots\.txt) {
        include {{ nginx_proxy_pass_config_file }};
    }

    {% if use_phantomjs %}

    set $phantomjs 0;
    if ($args ~ _escaped_fragment_) {
        set $phantomjs 1;
    }
    {% endif %}

    location /m/ {
        alias {{ project_media_dir }}/;
        expires 367d;
        access_log off;
        add_header Cache-Control public;
        {% if nginx_auth_basic %}
        auth_basic off;
        {% endif %}
    }

    location /s/admin {
        alias {{ project_static_dir }}/admin;
        expires 367d;
        access_log off;
        add_header Cache-Control public;
        {% if nginx_auth_basic %}
        auth_basic off;
        {% endif %}
    }

    location /static {
        alias {{ frontend_static_dir }};
        expires 367d;
        access_log off;
        add_header Cache-Control public;
        {% if nginx_auth_basic %}
        auth_basic off;
        {% endif %}
    }

    location /s/ {
        alias {{ project_static_dir }}/;
        expires 367d;
        access_log off;
        add_header Cache-Control public;
        {% if nginx_auth_basic %}
        auth_basic off;
        {% endif %}
    }

    {% if use_phantomjs %}

    if ($phantomjs) {
        rewrite ^ /phantomjs/$request_uri last;
    }
    {% endif %}

    {% if use_phantomjs %}

    if ($http_user_agent ~* "baiduspider|twitterbot|facebookexternalhit|rogerbot|linkedinbot|embedly|quora link preview|showyoubot|outbrain|pinterest|slackbot|vkShare|W3C_Validator") {
        rewrite ^ /phantomjs/$request_uri last;
    }
    {% endif %}

    {% if use_phantomjs %}

    location /phantomjs {
        error_log {{ phantomjs_log_error }};
        access_log {{ phantomjs_log_access }};

        proxy_pass http://localhost:8889/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header REMOTE_ADDR $remote_addr;
    }
    {% endif %}

    location = /index.html {
        add_header Cache-Control no-cache;
        add_header Last-Modified $date_gmt;
        etag off;
        if_modified_since off;
        root {{ frontend_static_dir }};
    }


   location / {
        try_files $uri /index.html;
        rewrite ^/(.+[^\/])$ /$1/ permanent;
        root {{ frontend_static_dir }};
    }

}
